<article class="post-wrapper col-md-8 col-sm-10">
    <div class="card post">
        <div class="card-header separate-items">
            {{post.title}}
            {{#if post.edit}} 
            <a href="/dashboard/edit/{{post.id}}" class="edit-link"><i class="far fa-lg fa-edit"></i></a>
            {{/if}}
        </div>

        <div class="card-body">
            <p class="card-text">{{post.content}}</p>
            
            <div class="card-text credentials">
                by {{post.user.username}} on {{format_date post.created_at}}</br>
            </div>
        </div>
    </div>
    <i class="fas fa-heart"></i> {{post.vote_count}} <button type="button" class="like-btn btn btn-danger">Like</button>
</article>

<div class="container">
    <div class="row justify-center">
        <div class="col-md-8 col-sm-10">
            {{#if loggedIn}}
                <form class="add-comment-form">
                    <div>
                        <textarea class="comment-body" name="comment-body"></textarea>
                    </div>

                    <div>
                        <button class="btn btn-success" type="submit">add comment</button>
                    </div>
                </form>
            {{/if}}
        </div>
    </div>
</div>

<div class="comment-count">
    <p id="comment-count-box">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</p>
</div>
{{> comments post.comments}}

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
<script src="/javascript/like.js"></script>
{{/if}}
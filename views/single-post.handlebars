<article class="post-wrapper col-md-8 col-sm-10">
    <div class="card post">
        <div class="card-header card-title">
            {{post.title}}
        </div>

        <div class="card-body">
            <p class="card-text">{{post.content}}</p>
            

            <div class="card-text credentials">
                by {{post.user.username}} on {{format_date post.created_at}}</br>
                <i class="fas fa-heart"></i> {{post.vote_count}}   
                |
                <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
            </div>
        </div>
    </div>
</article>

<div class="container">
    <div class="row justify-center">
        <div class="col-md-8 col-sm-10">
            {{#if loggedIn}}
                <form class="add-comment-form">
                    <div>
                        <textarea class="comment-body" name="comment-body"></textarea>
                    </div>

                    <div>
                        <button class="btn btn-success" type="submit">add comment</button>
                        <button type="button" class="upvote-btn btn btn-info">upvote</button>
                    </div>
                </form>
            {{/if}}
        </div>
    </div>
</div>

{{> comments post.comments}}

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
<script src="/javascript/upvote.js"></script>
{{/if}}
<div id="forms-section">
    <form class="login-form w-75 individual-form card">
        <div class="card-header">
            Already have an account?
        </div>
        <div class="card-body">
            <div class="form-group">
                <label for="email-login">Email:</label>
                <input class="form-control" type="email" id="email-login" aria-describedby="emailHelp" placeholder="Enter email"/>
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group"> 
                <label for="password-login">Password:</label>
                <input  class="form-control" type="password" id="password-login" placeholder="Password"/>
            </div>
            <div class="login-buttons">
                <button type="submit" class="btn btn-secondary general-button">Login</button>
                <a href="/signup">Create an account</a>
            </div>
        </div>
    </form>
</div>

<script src="/javascript/login.js"></script>
<article class="post-wrapper col-xl-3 col-lg-4 col-md-6 col-sm-12">
    <div class="card post">
        <div class="card-header card-title">
            {{title}}
        </div>

        <div class="card-body">
            <p class="card-text">{{content}}</p>
            
            <div class="card-text credentials">
                by {{user.username}} on {{format_date created_at}}</br>
                <i class="fas fa-heart"></i> {{vote_count}}   
                |
                <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
            </div>
        </div>
    </div>
    {{#if edit}} 
    <a href="/dashboard/edit/{{id}}" class="edit-link btn btn-info">Edit post</a>
    {{/if}}

</article>
<article class="post">
    <div class="col-lg-3 col-md-6 col-sm-12">
        <div class="title">
            <p>{{title}}</p>
            <p>({{content}})</p>
        </div>
        <div class="meta">
            by {{user.username}} on {{format_date created_at}}
            |
            <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
        </div>
    </div>
</article>